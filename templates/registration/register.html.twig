{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="/styles/fonts.css">
	<link href="/styles/inscription.css" rel="stylesheet">
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<div class="container">
		<div class="form-container">
			<div class="logo-container">
				<img class="logo" src="assets/imagesStatic/UltraMangaLogo.png" alt="logo ultra manga">
			</div>
			<div class="menu">
				<a class="login " href="{{ path('connexion') }}">SE CONNECTER</a>
				<a class="register active" href="{{ path('inscription') }}">S'INSCRIRE</a>
			</div>

			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
			{{ form_row(registrationForm.agreeTerms) }}

			<button type="submit" class="btn">Register</button>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}

